/* pages/sustc-bus.wxss */
#page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgb(228, 141, 60);
}
#page h1 {
  align-self: flex-start;
  padding: 4%;
}

.line {
  display: inline-flex;
  flex-direction: column;
  width: 70%;
  background-color: rgb(230, 236, 174);
  margin: 1%;
  padding: 2%;
  border-radius: 0.5em;
}

.line-name {
  margin: 1%;
  padding: 0 2% 2%; 
  border-bottom: dotted 1px gray;
}


.line-weekday {
  position: relative;
  margin: 5px;
  width: 80%;
}

